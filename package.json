{
  "name": "setup-cosmopolitan",
  "description": "GitHub action to setup Cosmopolitan toolchain on Linux, Windows and MacOS.",
  "version": "1.0.0",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tritao/setup-cosmopolitan.git"
  },
  "bugs": {
    "url": "https://github.com/tritao/setup-cosmopolitan/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Cosmopolitan"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "esbuild src/index.js --bundle --platform=node --target=node24 --minify --outdir=./dist",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@actions/)"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**",
      "!./src/main.js"
    ]
  },
  "dependencies": {
    "@actions/cache": "^6.0.0",
    "@actions/core": "^3.0.0",
    "@actions/tool-cache": "^4.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "babel-preset-jest": "^29.6.3",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^30.2.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.8.1"
  }
}
